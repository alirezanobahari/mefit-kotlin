<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgAppLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/pbLoading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_app" />

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAppLogo" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_rounded_rect_btn_register"
        android:text="@string/action_retry"
        android:textAppearance="@style/TextAppearance.Dark.Bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pbLoading"
        app:layout_constraintEnd_toEndOf="@+id/pbLoading"
        app:layout_constraintStart_toStartOf="@+id/pbLoading"
        app:layout_constraintTop_toTopOf="@+id/pbLoading" />


</androidx.constraintlayout.widget.ConstraintLayout>